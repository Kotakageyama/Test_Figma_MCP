{
	"mcpServers": {
		"github": {
			"type": "command",
			"command": "npx",
			"args": ["-y", "@modelcontextprotocol/server-github"],
			"env": {
				"GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
			}
		},
		"figma": {
			"type": "command",
			"command": "npx",
			"args": [
				"-y",
				"figma-developer-mcp",
				"--stdio",
				"--port=3000",
				"--figma-api-key=${FIGMA_API_KEY}"
			]
		}
	}
}
