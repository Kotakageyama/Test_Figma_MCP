{
	"mcpServers": {
		"github": {
			"type": "command",
			"command": "env",
			"args": [
				"GITHUB_PERSONAL_ACCESS_TOKEN=your_token",
				"-y",
				"@modelcontextprotocol/server-github"
			]
		},
		"figma": {
			"type": "command",
			"command": "env",
			"args": [
				"FIGMA_API_KEY=your_token",
				"-y",
				"figma-developer-mcp",
				"--stdio"
			]
		},
		"notion": {
			"type": "command",
			"command": "env",
			"args": [
				"NOTION_API_KEY=your_notion_integration_token",
				"npx",
				"-y",
				"notion-mcp"
			]
		}
	}
}
