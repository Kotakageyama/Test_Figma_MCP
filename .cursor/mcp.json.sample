{
	"mcpServers": {
		"github": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-github"
			],
			"env": {
				"GITHUB_PERSONAL_ACCESS_TOKEN": "your_token"
			}
		},
		"figma": {
			"command": "npx",
			"args": [
				"-y",
				"figma-developer-mcp",
				"--stdio"
			],
			"env": {
				"FIGMA_API_KEY": "your_token"
			}
		},
		"notion": {
			"command": "npx",
			"args": [
				"-y",
				"@suekou/mcp-notion-server"
			],
			"env": {
				"NOTION_API_TOKEN": "your-integration-token"
			}
		},
		"playwright": {
			"command": "npx",
			"args": [
				"-y",
				"@playwright/mcp@latest"
			]
		}
	}
}
