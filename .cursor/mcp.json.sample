{
	"mcpServers": {
		"github": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-github"
			],
			"env": {
				"GITHUB_PERSONAL_ACCESS_TOKEN": "your_token"
			}
		},
		"figma": {
			"command": "npx",
			"args": [
				"-y",
				"figma-developer-mcp",
				"--stdio"
			],
			"env": {
				"FIGMA_API_KEY": "your_token"
			}
		},
		"notion": {
			"command": "npx",
			"args": [
				"-y",
				"notion-mcp"
			],
			"env": {
				"NOTION_API_KEY": "your_notion_integration_token"
			}
		}
	}
}
